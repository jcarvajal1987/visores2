	}
	.denotation0::before {
		content: url("../img/positivo.svg");
		margin-left: 3px;
		margin-bottom: 1px;
		width: 16px;
		height: 16px;
	}
	.denotation1::before {
		content: url("../img/negativo2.svg");
		margin-left: 3px;
