	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #012350;
		background-size: 224px;
		padding: 0;
		margin: 0;
		height: 100%;
	}
	body {
		padding: 0;
		margin: 0;
		height: 100%;
	}
	* {
		box-sizing: border-box;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.block {
		display: block;
	}
	.printdetails {
		width: fit-content;
		display: grid;
		margin: 0 0 10px 0;
		grid-template-columns: auto auto auto;
		column-gap: 15px;
	}

	main {
		display: grid;
		grid-template-columns: 70% 30%;
		height: 100%;
		overflow: hidden;
		position: relative;
	}
	footer{
		padding: 46px 22px 22px 22px;
		font-size: 13px;
		font-family: 'Nunito Sans';
	}
	.logo {
		width: 114px;
		height: 57px;
	}
	.izibrand {
		min-width: 197px;
		height: auto;
	}

	.izipress {
		font-family: "Open Sans";
		font-size: 11px;
		margin-top: 5px;
		margin-left: 20px;
		flex: auto;
	}
	.start1 {
		grid-row-start: 1;
		grid-column-start: 1;
	}
	.detail-layout {
		grid-row-start: 1;
		grid-column-start: 1;
		align-self: start;
		justify-self: right;
		padding: 33px 25px 26px 0;
	}
	.detail-layout2 {
		grid-row-start: 1;
		grid-column-start: 1;
		align-self: start;
		justify-self: right;
		padding: 33px 28px 26px 0;
	}
	.abrir {
		gap: 10px;
	}
	.cerrar {
		gap: 10px;
	}
	.xs {
		display: none;
	}

	.title {
		font-family: "Raleway", math;
		font-size: 33px;
		font-weight: 600;
		padding-bottom: 30px;
	}
	.title-papel {
		font-family: "Acta W01 Medium", georgia;
		font-size: 42px;
		font-weight: 500;
		padding-bottom: 30px;
	}
	.title-video {
		font-family: "Raleway", math;
		font-size: 26px;
		font-weight: 600;
		padding-bottom: 30px;
	}
	.cachetxt {
		font-family:
			Nunito Sans,
			system-ui;
		font-size: 17px;
		font-weight: 400;
		line-height: 21px;
	}
