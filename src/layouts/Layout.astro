		main {
			grid-template-columns: 100% 80%;
		}
		.papel {
			padding: 0 3% 50px 3%;
		}
		.printdetails {
			display: none;
		}
		footer{
			padding: 30px 3% 30px 3%;
		}
		.columnb {
			transform: translatex(0%);

			width: 100%;
			max-width: 450px;
			opacity: 0;
		}
		.container {
			margin-top: -5px;
		}
		.columnb.active-sidebar {
			transform: translatex(-100%);
			opacity: 1;
		}
		.video {
			width: 100%;
		}
		.items {
			padding: 87px 6.5% 87px 6.5%;
		}
		.xs {
			display: block;
		}
		.z2 {
			z-index: 20;
		}
	}

