	}
	.section {
		margin-left: 3px;
		margin-top: 2px;
		width: 17px;
	}
	.upload {
		margin-left: 3px;
		margin-bottom: 1px;
		width: 18px;
		height: 14.14px;
		border-radius: 4px;
	}
	
	.chain {
		width: 16px;
		height: 16px;
	}
	.download {
		margin-left: 3px;
		margin-bottom: 1px;
		width: 20px;
		height: 19.2px;
		border-radius: 4px;
	}
